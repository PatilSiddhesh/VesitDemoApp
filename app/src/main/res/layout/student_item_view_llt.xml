<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/person_image_iv"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:src="@drawable/default_person_placeholder"
        android:tint="@color/colorAccent"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/person_image_iv"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/student_name_tv"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:text="Default name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/student_college_tv"
            android:layout_margin="5dp"
            android:text="College name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/student_number_tv"
            android:layout_margin="5dp"
            android:text="000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/student_department_tv"
            android:layout_margin="5dp"
            android:text="Default department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</RelativeLayout>
